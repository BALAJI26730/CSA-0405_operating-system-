#include <stdio.h>
#include <pthread.h>
#include <unistd.h>

void *thread_func(void *arg) {
    int id = *(int*)arg;
    printf("Thread %d created.\n", id);

    if (pthread_equal(pthread_self(), pthread_self()))
        printf("Thread %d confirms pthread_equal() works.\n", id);

    pthread_exit(NULL);
}

int main() {
    pthread_t t1, t2;
    int id1 = 1, id2 = 2;

    pthread_create(&t1, NULL, thread_func, &id1);
    pthread_create(&t2, NULL, thread_func, &id2);

    pthread_join(t1, NULL);
    pthread_join(t2, NULL);

    printf("Main thread finished after join.\n");
    return 0;
}
output : 
Thread 1 created.
Thread 1 confirms pthread_equal() works.
Thread 2 created.
Thread 2 confirms pthread_equal() works.
Main thread finished after join.
