#include <stdio.h>
#include <stdlib.h>
#include <string.h>

int main() {
    FILE *fp;
    char filename[50], word[20], line[200];
    int line_no = 0, found = 0;

    printf("Enter file name: ");
    scanf("%s", filename);
    printf("Enter word to search: ");
    scanf("%s", word);

    fp = fopen(filename, "r");
    if (!fp) { perror("fopen"); exit(1); }

    while (fgets(line, sizeof(line), fp)) {
        line_no++;
        if (strstr(line, word)) {
            printf("Found at line %d: %s", line_no, line);
            found = 1;
        }
    }
    if (!found)
        printf("Word '%s' not found in file.\n", word);

    fclose(fp);
    return 0;
}
