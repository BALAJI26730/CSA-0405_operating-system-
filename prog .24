#include <stdio.h>
#include <stdlib.h>
#include <fcntl.h>
#include <unistd.h>
#include <string.h>

int main() {
    int fd;
    char buffer[100];
    char text[] = "Hello, this is a file management demo!\n";


    fd = open("demo.txt", O_CREAT | O_RDWR | O_TRUNC, 0644);
    if (fd < 0) { perror("open"); exit(1); }

    
    write(fd, text, strlen(text));


    lseek(fd, 0, SEEK_SET);

    
    int n = read(fd, buffer, sizeof(buffer) - 1);
    buffer[n] = '\0';

    printf("File Content: %s", buffer);

    close(fd);
    return 0;
}
