#include <stdio.h>
#include <stdlib.h>

int main() {
    FILE *fp;

    
    fp = fopen("sample.txt", "w");
    fprintf(fp, "This is a test file.\nLine 2 of text.\n");
    fclose(fp);

   
    fp = fopen("sample.txt", "r");
    char ch;
    printf("File Content:\n");
    while ((ch = fgetc(fp)) != EOF)
        putchar(ch);
    fclose(fp);


    if (remove("sample.txt") == 0)
        printf("\nFile deleted successfully.\n");
    else
        perror("remove");

    return 0;
}
